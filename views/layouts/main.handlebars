        <!-- HEADER1 SECTION START -->
		<div class="header-area">
			<div class="container">
				<div class="header">
					<div class="row">
						<div class="col-md-2 float-left">
							<div class="logo">
								<a href="#">
									<img src="/img/logo.svg" alt="App Logo" />
								</a>
							</div>
						</div>
						<div class="col-md-10 float-right">
							<button id="collapse-nav-menu"><i class="fas fa-bars"></i></button>
							<div class="nav d-flex justify-content-center" id="nav">
								<ul id="nav-menu">
									<li class="scroll"><a class="active-menu" href="/">Home</a></li>
									<li class="scroll"><a href="/blog">Blog</a></li>
									<li class="scroll"><a href="#">about us</a></li>
									{{#if user}}
									<li class="scroll"><a href="/logout">Logout {{user.first_name}}</a></li>
									{{else}}
									    <li class="scroll"><a href="/login">Login</a></li>
                                    	<li class="scroll"><a href="/register">Sign Up</a></li>
									{{/if}}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
        {{#if show_hero}}
        <!-- HEADER2 SECTION START -->
		<div class="hero-header-area">
			<div class="container">
				<div class="hero-header">
					<div class="row">
						<div class="col-md-9 float-left"></div>
						<div class="col-md-3 float-left">
							<form class="hero-search">
								<div class="">
									<input type="text" class="form-control" id="" name="" placeholder="Search the blog">
								</div>
								<button><i class="fas fa-search"></i></button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
        {{/if}}

        {{{body}}}

        <!-- FOOTER SECTION START -->
		<footer class="footer-area">
			<div class="container">
				<div class="footer">
					<div class="footer-up pt-5 pb-5">
						<div class="row">
							<div class="col-md-4 float-left">
								<div class="footer-logo">
									<img src="/img/logo.svg" alt="App Logo" />
